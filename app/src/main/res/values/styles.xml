<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">#eee</item>
    </style>
    <style name="Note">
        <item name="android:layout_width">@dimen/note_size</item>
        <item name="android:layout_height">@dimen/note_size</item>
        <item name="android:background">@drawable/background_round</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/note_text_size</item>
    </style>
    <style name="BigNote" parent="Note">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>
